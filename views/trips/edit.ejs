<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Trip</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/trips/edit?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="trip[destination]" value="<%=trip.destination %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="trip[drivername]" value="<%=trip.drivername %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="trip[driverno]" value="<%=trip.driverno %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="trip[driveremail]" value="<%=trip.driveremail %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="trip[carmodel]" value="<%=trip.carmodel %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="trip[people]" value="<%=trip.people %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="trip[cost]" value="<%=trip.cost%>" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="trip[description]" value="<%=trip.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="trip[avatar]" value="<%=trip.avatar %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include ("../partials/footer") %>
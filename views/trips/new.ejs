<%- include ("../partials/header") %>

<div class="container" style="margin-top: 60px;">
  <div class="well">
    <div class="row">
        <h1 style="text-align: center">Add a Trip</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/trips" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="destination" placeholder="Final Destination">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="drivername" placeholder="Driver Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="driverno" placeholder="Driver Phone No">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="driveremail" placeholder="Driver Email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="carmodel" placeholder="Car Model">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="people" placeholder="No.of People">
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="cost" placeholder="cost" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="avatar" placeholder="Image url">
                </div>
                
			
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
    </div>
    </div>
</div>

<%- include ("../partials/footer") %>